<Window x:Class="NaughtySpirit.SimsRunner.Gui.EditObjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit" Height="150" Width="300" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Name="Label1"/>
        <Label Grid.Row="1" Grid.Column="0" Name="Label2"/>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="3" Name="TextBox1" />
        <TextBox Grid.Column="1" Grid.Row="1" Margin="3" Name="TextBox2"/>        
        <Button Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom" HorizontalAlignment="Left" 
            MinWidth="80" Margin="3" Content="Cancel" Click="OnCancelClickHandler"/>
        <Button Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom"  HorizontalAlignment="Right" 
            MinWidth="80" Margin="3" Content="Save" Click="OnSaveClickHandler"/>
    </Grid>
</Window>
